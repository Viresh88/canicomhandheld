<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/get_started"
    tools:context=".GetStarted">
    
    <ImageView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/numaxesimg"
        android:layout_marginStart="10dp"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:lineHeight="48dp"
        android:text="Canicalm Smart"
        android:textColor="#262727"
        android:textFontWeight="400"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/textView13"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="Canicalm Smart is the anti-barking collar for small and large dogs that can be controlled by using a mobile app. On your mobile app, you should choose one of four possible barking correction mode, also you need to choose the time  interval of the collar functionality."
        android:textColor="#262727"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@id/btngetStarted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btngetStarted"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_background"
        android:text="GET STARTED"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textFontWeight="600"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>