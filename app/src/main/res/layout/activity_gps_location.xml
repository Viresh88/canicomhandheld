<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <!-- Horizontal ScrollView -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:src="@drawable/avatar2" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Floating Action Buttons -->
    <LinearLayout
        android:id="@+id/fabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:background="@drawable/border"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/calendarimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/calender"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Calendar" />

        <ImageButton
            android:id="@+id/compassimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/compass"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Compass" />

        <ImageButton
            android:id="@+id/btnFence"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/map"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Fence" />

        <ImageButton
            android:id="@+id/btnFlag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/flag"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Flag" />

        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/vector"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Map" />
    </LinearLayout>

    <!-- Content Layout Above Navigation -->
    <LinearLayout
        android:id="@+id/bottomContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationBar"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:orientation="horizontal"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rajyog Society"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warje, Pune, Maharashtra 411058"
                android:textSize="14sp"
                android:textColor="#757575" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction"
            android:backgroundTint="#ECECEC"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:backgroundTint="#3B82F6"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/bookmark"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bookmark" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/history"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="History" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notification"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Notifications" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/flash"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Flash" />
    </LinearLayout>

</RelativeLayout>
